extends layout

block content
    div(class='row')
    div(class='main')
      h3 
        b 나의 정보
      hr(class='line')
      div(class='board')
        p * 이름: #{userinfo.name}
        p * 학부: #{department.name}
        p * 학년: #{userinfo.grade}
        p * 내가 참여한 설문 개수: #{num_res}
        p * 내가 작성한 설문 개수: #{num_form}
      br
      br
      h3 
        b 내가 참여한 설문
      hr(class='line')
      table(class='table table-striped')
        thead
        tr
          th
            b 설문제목
          th
            b 학부
          th
            b 작성일자
        each item in result
          - var date = new Date(item.form.date);
          tr
            td
              a(class="w3-bar-item w3-button" href=item.form.url) #{item.form.data.title}
            td #{item.department.name}
            td #{date.toDateString()}

      br
      br
      br
      h3 
        b 내가 작성한 설문
      hr(class='line')
      table(class='table table-striped')
        thead
        tr
          th
            b 설문제목
          th
            b 학부
          th
            b 작성일자
          th
            b Result
          th
            b Delete
        each item in form
          - var date = new Date(item.date);
          tr
            td
              a(class="w3-bar-item w3-button" href="/edit/"+item._id) #{item.data.title}
            td #{department.name}
            td #{date.toDateString()}
            td
              a(class="w3-bar-item w3-button" href="/result/"+item._id) Result
            td
              a(class="w3-bar-item w3-button" href="/delete/"+item._id) Delete

